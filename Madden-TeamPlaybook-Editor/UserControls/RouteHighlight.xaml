<UserControl 
    x:Class="MaddenTeamPlaybookEditor.User_Controls.RouteHighlight"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:math="http://hexinnovation.com/math"
    xmlns:UserControl="clr-namespace:MaddenTeamPlaybookEditor.Classes"
    x:Name="uclRouteHighlight">

    <UserControl.Resources>
        <math:MathConverter x:Key="math" />
    </UserControl.Resources>

    <Canvas Name="cnvRouteHighlight">

        <Ellipse x:Name="elpHighlight" Height="12" Width="12" Canvas.Left="-6" Canvas.Top="-6">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="White" Offset="0" />
                        <GradientStop Color="Transparent" Offset="1" />
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Canvas>

</UserControl>
