<UserControl
    x:Class="MaddenTeamPlaybookEditor.User_Controls.FilterableTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="uclFilterableTable">

    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <ComboBox x:Name="cbxFilter" Margin="5,0" SelectedIndex="0" MinWidth="100"/>
            <TextBox x:Name="tbxValue" Margin="5,0" Width="200" TextChanged="tbxValueChanged"/>
        </StackPanel>
        <DataGrid 
            x:Name="dataGrid"
            Margin="5"
            MaxHeight="900"
            Background="{x:Null}" 
            BorderBrush="{x:Null}" 
            Foreground="Black"
            ItemsSource="{Binding ElementName=uclFilterableTable, Path=Data}"
            HorizontalGridLinesBrush="#FFD6D6D6"
            VerticalGridLinesBrush="Black"
            GridLinesVisibility="Horizontal"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            EnableColumnVirtualization="True"
            EnableRowVirtualization="True"
            DataContextChanged="dataContextChanged"/>
    </StackPanel>
    
</UserControl>
