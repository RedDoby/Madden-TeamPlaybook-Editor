<UserControl 
    x:Class="MaddenTeamPlaybookEditor.User_Controls.PSAL_Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:UserControls="clr-namespace:MaddenTeamPlaybookEditor.User_Controls"
    mc:Ignorable="d"
    x:Name="uclPSALEditor"
    >

    <DockPanel Height="Auto">
        <Canvas  
            DockPanel.Dock="Top"
            Name="PSAL_Canvas" 
            Width="533"
            Height="850"
            MouseDown="PSAL_Canvas_MouseDown" 
            MouseMove="PSAL_Canvas_MouseMove"
            >
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/full_field.jpg" Stretch="UniformToFill" AlignmentY="Top" Opacity=".5"/>
            </Canvas.Background>
        </Canvas>
        <!--<DataGrid 
            x:Name="PSAL_List" 
            DockPanel.Dock="Bottom" 
            ItemsSource="{Binding PSAL}"
            />-->
    </DockPanel>
</UserControl>
